<%- include('partials/_header') %>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') %>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1> <%= post.title %> </h1>
            
            <%= post.dateCreated %> 
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <%= post.detail %>
          
            <img  src="<%= post.image %>" alt="image" class="img-fluid">
            
          
        </div>
      </div>
    </div>
    
  </article>
  <br>
  <div class="tm-bg-gray tm-share-box">
    <div class="text-center">
      <a href="/posts/edit/<%= post._id %>" class="btn btn-primary p-8 mb-4 tm-btn-animate tm-btn-download tm-icon-download"><span>Update Details</span></a>	
    </div>	
    <div class="text-center">
      <a href="/posts/<%= post._id%>?_method=DELETE" class="btn btn-danger p-8 tm-btn-animate tm-btn-download tm-icon-download"
        onclick="return confirm('ARE YOU SURE?')"><span>Delete Photo</span></a>	
    </div>								
  </div>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') %>

</body>

</html>
